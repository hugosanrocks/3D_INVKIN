subroutine compute_lagrange_weight(w,xx,x,q)
  implicit none
  integer::q
  real::w(q+1),x(q+1),xx,tmp

  integer::i,j

  do i=1,q+1
     tmp=1.
     do j=1,q+1
        if(j.ne.i) then
           tmp=tmp*(xx-x(j))/(x(i)-x(j))
        endif
     enddo
     w(i)=tmp
  enddo
end subroutine compute_lagrange_weight
